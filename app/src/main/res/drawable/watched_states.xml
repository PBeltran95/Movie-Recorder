<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:id="@+id/state_selected"
        android:drawable="@drawable/ic_watched_films"
        android:state_checked="true"/>

    <item
        android:id="@+id/state_deselected"
        android:drawable="@drawable/ic_visibility"
        android:state_checked="false"/>

    <item android:drawable="@drawable/ic_watched_films"/>

    <transition
        android:drawable="@drawable/ic_watched_films"
        android:fromId="@id/state_deselected"
        android:toId="@id/state_selected" />

</animated-selector>