<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlkemyMovieApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textInBackground">
        <item name="autoSizeTextType"> uniform</item>
        <item name="autoSizeMaxTextSize">25sp</item>
        <item name="autoSizeMinTextSize">13sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:baselineAligned">false</item>
        <item name="drawableTint">@color/white</item>
    </style>
    <style name="textDescriptionAndGenre">
        <item name="autoSizeTextType"> uniform</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textTitles" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="autoSizeTextType"> uniform</item>
        <item name="autoSizeMaxTextSize">35sp</item>
        <item name="autoSizeMinTextSize">17sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="maxLines">7</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="textItemTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="autoSizeTextType"> uniform</item>
        <item name="autoSizeMaxTextSize">25sp</item>
        <item name="autoSizeMinTextSize">15sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="roundedSquare">

        <item name="cornerSize">10%</item>


    </style>




</resources>